@model IEnumerable<PastebookEF.NOTIFICATION>

<li class="notification-listitem">
    @Html.ActionLink("View All Notification", "Notification", "Notification")
</li>

<li class="divider">
</li>
@foreach (var notification in Model)
{
<li class="notification-listitem">
        @if (notification.NOTIF_TYPE == "L")
        {
            @Html.ActionLink(notification.USER1.FIRST_NAME + " " + notification.USER1.LAST_NAME + " liked a post  you posted.", "Posts", "Post", new { postId = notification.POST_ID }, null);
        }

        @if (notification.NOTIF_TYPE == "C")
        {
            @Html.ActionLink(notification.USER1.FIRST_NAME + " " + notification.USER1.LAST_NAME + " commented on a post you posted.", "Posts", "Post", new { postId = notification.POST_ID }, null);
        }

        @if (notification.NOTIF_TYPE == "F")
        {
            @Html.ActionLink(notification.USER1.FIRST_NAME + " " + notification.USER1.LAST_NAME + "  sent you a friend request.", "UserProfile", "Profile", new { username = notification.USER1.USER_NAME }, null);
        }
</li>
}

