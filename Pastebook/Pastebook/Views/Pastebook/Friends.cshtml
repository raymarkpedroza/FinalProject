@model Pastebook.Models.FriendListViewModel

<div id="friend-friend-list-container" class="container">
    <div id="friend-backToTimeline">
        @Html.ActionLink("Back To Timeline", "Home", "Pastebook")
    </div>
<div class="row" id="friend-row">
    @foreach (var friendDetails in Model.ListOfFriendsWithDetails)
    {
        <div class="friend-friendlist-item col-md-2">
            <div class="friendlist-item-header">
                @if (friendDetails.FriendDetails.PROFILE_PIC == null)
                {
                    <img src="~/Content/Images/pastebook-default.png" id="friend-prof-pic" class="img-circle" alt=@friendDetails.FriendDetails.FIRST_NAME @friendDetails.FriendDetails.LAST_NAME>
                }

                else
                {
                    var base64 = Convert.ToBase64String(friendDetails.FriendDetails.PROFILE_PIC);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                    <img src=@imgSrc id="friend-prof-pic" class="img-circle" alt=@friendDetails.FriendDetails.FIRST_NAME @friendDetails.FriendDetails.LAST_NAME>
                }
                <div id="friend-name" class="text-center">
                    @Html.ActionLink(friendDetails.FriendDetails.FIRST_NAME + " " + friendDetails.FriendDetails.LAST_NAME, "Index", "Pastebook", new { username = friendDetails.FriendDetails.USER_NAME }, null)
                </div>
            </div>
        </div>
    }
</div>
</div>