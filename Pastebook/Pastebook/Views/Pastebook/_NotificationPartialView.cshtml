@model IEnumerable<PastebookEF.NOTIFICATION>

<span class="glyphicon glyphicon-bell icon" id="notifications" data-toggle="dropdown" title="Notifications">
</span>

<span class="badge badge-notify" id="other-notification" data-toggle="dropdown"> @Model.Where(x => x.SEEN == "N").Where(x => x.RECEIVER_ID == (int)Session["UserId"]).Where(x => x.USER1.ID != (int)Session["UserId"]).Count() </span>

<ul class="dropdown-menu" aria-labelledby="notifications" id="notification-dropdown">
    @if (Model.Count() < 1)
    {
        <li class="notification-listitem">No notification.</li>
    }

    else
    {
        Html.RenderAction("GetNotificationItems", "Notification");
    }
</ul>

