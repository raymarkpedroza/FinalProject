@model Pastebook.Models.SearchModel

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        @using (Html.BeginForm("Search", "Pastebook", FormMethod.Post, new { @class = "form-inline" }))
        { 
            <span id="searchBar">
                @if (Session["UserFullname"] != null)
                {
                        @Html.TextBoxFor(m => m.Name, new { id = "textboxSearch" })

                        <button type="submit" id="btnSearch">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                }
            </span>

            <div class="pull-right">

                @if (Session["UserFullname"] != null)
                {
                    <div class="btn-group" id="profile-link">
                        <span>
                            @Html.ActionLink(Session["UserFullname"].ToString(), "Index", "Pastebook", new { username = Session["Username"].ToString() }, null)
                        </span>
                    </div>
                }


                <div class="btn-group">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="glyphicon glyphicon-home icon"></span>
                    </a>
                </div>
                @if (Session["UserFullname"] != null)
                {
                    <div class="btn-group" id="pastebook-nav-bar-friendRequests">
                        @{Html.RenderAction("GetFriendRequests", "Reaction");}
                    </div>

                    <div class="btn-group" id="pastebook-nav-bar-notification">
                        @{Html.RenderAction("GetNotifications", "Reaction");}
                    </div>

                    <div class="btn-group" id="pastebook-nav-bar-settings">
                        <span class="glyphicon glyphicon-cog icon" id="settings" data-toggle="dropdown">
                        </span>

                        <div class="dropdown-menu" aria-labelledby="settings">
                            <div class="settings-listitem">Edit Profile</div>
                        </div>
                    </div>

                    <div class="btn-group" id="logout-link">
                        @Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "link" })
                    </div>
                }
            </div>
        }
    </div>
</div>


