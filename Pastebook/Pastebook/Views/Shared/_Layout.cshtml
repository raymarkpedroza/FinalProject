<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div>
                <a href="@Url.Action("Index", "Home")">
                    <span class="glyphicon glyphicon-home icon">Home</span>
                </a>
                @if (Session["Username"] != null)
                {
                @*<img src="@Url.Content("~/Content/Images/logo-black.png")" id="logo-home" />*@
                
                @*<span class="badge">1</span>*@
                <span class="glyphicon glyphicon-bell icon">Notification</span>
                <span class="glyphicon glyphicon-user icon">Friends</span>
                <input type="text" placeholder="search" id="textboxSearch"/>
                <button type="button">
                    <span class="glyphicon glyphicon-search"></span>
                </button>

                <div class="pull-right" id="logout-link"> 
                    <span>Hi @Session["Username"]!</span>
                    @Html.ActionLink("Logout", "Logout", "User", null, new { @class = "link" })
                </div>
                }
            </div>

            @*<div class="navbar-collapse collapse">
               
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>*@
           
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pastebook</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("modal", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
