<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div>
                <span id="searchBar">
                    @if (Session["UserFullname"] != null)
                    {
                        <input type="text" placeholder="search" id="textboxSearch" />
                        <button type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    }
                </span>

                <div class="pull-right">
                    
                    @if (Session["UserFullname"] != null)
                    {
                        <div class="btn-group" id="profile-link">
                        <span>
                            @Html.ActionLink(Session["UserFullname"].ToString(), "Profile", "User")
                        </span>
                        </div>
                    }
                    

                    <div class="btn-group">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="glyphicon glyphicon-home icon"></span>
                    </a>
                    </div>
                    @if (Session["UserFullname"] != null)
                    {
                        <div class="btn-group">
                        <span class="glyphicon glyphicon-user icon" id="friendRequests" data-toggle="dropdown"><span class="caret"></span></span>
                        <ul class="dropdown-menu" aria-labelledby="friendRequests">
                            <li><a href="#">Mamark added you</a></li>
                        </ul>
                        </div>

                        <div class="btn-group">
                            <span class="glyphicon glyphicon-bell icon" id="notifications" data-toggle="dropdown"><span class="caret"></span></span>
                            <ul class="dropdown-menu" aria-labelledby="notifications">
                                <li><a href="#">Posted on your timeline</a></li>
                            </ul>
                        </div>

                        <div class="btn-group" id="logout-link">
                            @Html.ActionLink("Logout", "Logout", "User", null, new { @class = "link" })
                        </div>
                    }
                        </div>
            </div>

            @*<div class="navbar-collapse collapse">
               
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>*@
           
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pastebook</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("reload", required: false);
    @RenderSection("scripts", required: false)
</body>
</html>

@section reload{
    <script>
        @*var session = @Session["Username"].ToString()
        $(documents).ready(function (){
            if (session == null) {
                location.reload()
            };
        });*@
    </script>
}